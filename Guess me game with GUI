import random
from tkinter import *

guessed = int(random.randint(1, 100))
class Game(object):
    def __init__(self):
        # GUI Window game
        self.root = Tk()
        self.root.wm_title("Guess Me Game!")
        self.root.geometry("380x200")
        self.Label = Label(self.root, text='Welcome to guess game!', font='red').pack()
        self.Label = Label(self.root, text=':הוראות המשחק').pack()
        self.Label = Label(self.root, text='You need to guess number between 1 to 100').pack()
        self.Label = Label(self.root, text='if your guess is too high, you going to get too high').pack()
        self.Label = Label(self.root, text='if your guess is too low, you going to get too low!').pack()

        self.entrytext = StringVar()
        Entry(self.root, textvariable=self.entrytext).pack()

        self.buttontext = StringVar()
        self.buttontext.set("Push Me!")
        Button(self.root, textvariable=self.buttontext, command=self.clicked1).pack()

        self.label = Label(self.root, text="")
        self.label.pack()

        self.root.mainloop()


    def clicked1(self):
        global guessed
        guess = int(self.entrytext.get())
        if guess == guessed:
            self.label.configure(text="WOW your guess is right, YOU WIN!!!!!", font='red')
        elif guess > guessed:
            self.label.configure(text="Too High, please try again", font='red')
        else:
            self.label.configure(text="Too Low, please try again", font='red')

    def button_click(self, e):
        pass

Game()
